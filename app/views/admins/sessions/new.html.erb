      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="form login_form">
          <section class="login_content">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                <h1>Login Administrativo</h1>
                
                <div>
                  <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
                </div>

                  <div>
                    <%= f.password_field :password, autofocus: true, placeholder:"Senha", class:"form-control" %>
                  </div>

              <div>
                  <div class="actions">
                    <%= f.submit "Entrar", class:"btn btn-default submit" %>
                  </div>
                <a class="reset_pass" href="#">Lost your password?</a>
              </div>

                <% if devise_mapping.rememberable? %>
                  <label>
                    <%= f.check_box :remember_me %> Lembrar-me
                  </label>
                <% end %>

              <div class="clearfix"></div>

            <% end %>
          </section>
        </div>


  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>


