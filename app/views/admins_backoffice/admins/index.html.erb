<h1>Lista de Administradores</h1>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th><%= translate_field(@admins, :email) %></th>
            <th><%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-plus"></i>
                <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
          <tr>
            <th scope="row"><%= admin.id %></th>
            <td><%= admin.email %></td>
            <td style="width: 100px">

                <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger", data: {confirm: "Deseja realmente exlcuir este Administrador: #{admin.email}?"} do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

  <div class="text-center">
  <%= paginate @admins %>
  </div>

