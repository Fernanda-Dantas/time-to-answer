<h1><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th><%= translate_field(@questions, :description) %></th>
            <th><%= translate_field(@questions, :subject) %></th>
            <th><%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-plus"></i>
                <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
          <tr>
            <th scope="row"><%= question.id %></th>
            <td><%= question.description.truncate(50) %></td>
            <td><%= question.subject.description.truncate(30) %></td>
            <td style="width: 100px">

                <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger", data: {confirm: t('message.confirm_with', item: question.description.truncate(15))} do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

  <div class="text-center">
  <%= paginate @questions %>
  </div>
