<div class="x_panel">
    <div class="x_title">
      <h2><%= "#{action_message} Perguntas" %></h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
    <% if @question.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span>
        </button>
        <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <%= form_with(model: [ :admins_backoffice, @question ], local: true, class:"form-horizontal form-label-left") do |form|%>
        <div class="form-group">
          <%= form.label :description, class:"control-label" %>
          <%= form.text_field :description, class:"form-control col-md-7 col-xs-12", placeholder:"Pergunta" %>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
          <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <!--<button class="btn btn-primary" type="button">Cancelar</button> -->
            <button type="submit" class="btn btn-success">Salvar</button>
          </div>
        </div>
      <% end %>
    </div>
</div>